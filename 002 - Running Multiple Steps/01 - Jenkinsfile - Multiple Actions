pipeline {
    agent {
        docker {
            image 'alpine:latest'
        }
    }
    stages {
        stage('Create File') {
            steps {
           script {
                    def currentDate = sh(returnStdout: true, script: 'date').trim()
                    writeFile file: 'file.txt', text: currentDate
                }
            }
        }
        stage('Print File Content') {
            steps {
                sh 'cat file.txt'
            }
        }
    }
}
