pipeline {
    agent {
        docker {
            image 'alpine:latest'
        }
    }
    stages {
        stage('Create File') {
            steps {
                sh 'touch /file.txt'
                sh 'echo $(date) > /file.txt'
                sh 'sleep 10s'
                sh 'grep "2023" /file.txt'
            }
        }
        stage('Print File Content') {
            steps {
                sh 'cat /file.txt'
            }
        }
    }
}
