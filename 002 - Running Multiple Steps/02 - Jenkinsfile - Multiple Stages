pipeline {
    agent {
        docker {
            image 'alpine:latest'
        }
    }
    stages {
        stage('Create File') {
            steps {          
                sh 'touch /file.txt'
                sh 'echo $(date) > /file.txt'
                def grepResult = sh(returnStatus: true, script: 'grep -q "2023" /file.txt')
                    def wordExists = grepResult == 0
                    
                    if (wordExists) {
                        echo 'Word "2023" exists in the file'
                    } else {
                        echo 'Word "2023" does not exist in the file'
                    }
            }
        }
        stage('Print File Content') {
            steps {
                sh 'cat /file.txt'
            }
        }
    }
}
