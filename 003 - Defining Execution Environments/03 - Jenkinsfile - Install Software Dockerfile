pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    def imageName = 'my-curl-image'
                    def dockerFile = 'Dockerfile'

                    def dockerImage = docker.build(imageName, "-f ${dockerFile} .")

                    // Run the Docker container
                    dockerImage.inside {
                        sh 'curl www.google.com'
                    }
                }
            }
        }
    }
}
