pipeline {
    agent any

    stages {
        stage('Build and Run Docker Image') {
            steps {
                script {
                    def imageName = 'my-existing-image'

                    dockerfile {
                        // Specify the directory and filename of the Dockerfile
                        dir '003 - Defining Execution Environments/'
                        filename '03 - Dockerfile - Install Software Dockerfile'

                        // Add any additional build arguments or command-line arguments
                        additionalBuildArgs '--network=host'
                        args '-v /my/host/dir:/container/dir'

                        // Build the Docker image
                        dockerImage = docker.build(imageName)
                    }

                    // Run the Docker container
                    dockerImage.inside {
                        // Add any additional steps or commands you want to run within the Docker container
                        sh 'echo "Running inside the Docker container"'
                    }
                }
            }
        }
    }
}
